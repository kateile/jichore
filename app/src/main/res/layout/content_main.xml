<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/container"
        android:layout_marginBottom="96dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="0dp">

        <ImageView
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:src="@drawable/test"
                android:id="@+id/targetImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:contentDescription="@string/image"/>

        <ProgressBar
                app:layout_constraintTop_toTopOf="@id/targetImageView"
                app:layout_constraintLeft_toLeftOf="@id/targetImageView"
                app:layout_constraintRight_toRightOf="@id/targetImageView"
                app:layout_constraintBottom_toBottomOf="@id/targetImageView"
                android:id="@+id/progressBar"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            app:tabGravity="fill"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@android:color/white"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabIndicatorHeight="4dp"
            app:tabBackground="@color/colorPrimary"
            app:tabMode="scrollable"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <SeekBar
                android:id="@+id/seekBar"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"/>
        <TextView
                android:id="@+id/percentTextView"
                android:layout_gravity="center"
                tools:text="100 %"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>




